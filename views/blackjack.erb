

<h1>Welcome to the game!</h1>

<% unless bet_placed %>
  <form action="blackjack" method="get">
    <input type="number" name="bet" placeholder="How much would you like to bet?">
    <input type="submit" value="Bet!">
  </form>
<% else %>
  <h2> Current bet: <%= bet_placed %> </h2>
  <h3> Hands dealt!</h3>
  <h4>Your hand is <%= player_cards %></h4>
  <h4>The dealer's visible card is <%= dealer_cards[0] if dealer_cards %></h4>

  <form action="blackjack" method="get">
    <input type="submit" name="hit" value="Hit!">
  </form>

  <form action="game_over" method="get">
    <input type="submit" name="stay" value="Stay!">
  </form>
  <% unless player_cards.to_a.length > 2 %>
  <form action="blackjack" method="get">
    <input type="submit" name="double" value="Double!">
  </form>
  <% if player_cards[0][0] == player_cards[1][0] %>
   <form action="blackjack" method="get">
    <input type="submit" name="split" value="Split!">
  </form>
  <% end %>
  <% end %>

<% end %>
